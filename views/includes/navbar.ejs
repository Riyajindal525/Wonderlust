<style>
   @media (max-width : 600px) {
       .userName{
           position : absolute;
           margin-right: auto;
           right : 4rem;
       }
       .navbar{
         height: fit-content;
       }
       .search-box{
        width : 150px;
       }
       .search{
        width : 200px;
       }
       .search-btn{
        width : 50px;
      
       }
      
   }
</style>

<nav class="navbar navbar-expand-md navbar-light bg-light border-bottom sticky-top">
  <div class="container-fluid">
    <!-- Logo -->
    <a class="navbar-brand ms-3" href="/listings">
      <i class="fa-solid fa-compass"></i>
    </a>
    
    <% if(currentUser){ %>
      <span class="userName d-none d-md-inline fw-semibold">
        Hello, <%= currentUser.username %>!
      </span>
    <% } %>
    
    <!-- Toggler (mobile only) -->
    <button class="navbar-toggler d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleContent" aria-controls="navbarToggleContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    

    <!-- Collapsible content -->
    <div class="collapse navbar-collapse position-relative" id="navbarToggleContent">
      <!-- Close button inside collapse (mobile only) -->
      <button id="navbarCloseBtn" class="btn-close position-absolute top-0 end-0 m-3 d-md-none" type="button" aria-label="Close"></button>

      <div class="d-flex flex-column flex-md-row w-100 align-items-center bg-light" >
        
        <% if(currentUser){ %>
          <span class="fw-semibold d-md-none mb-3">
            Hello, <%= currentUser.username %> 
          </span>
        <% } %>

        <!-- Center search -->
        <div class="flex-grow-1 d-flex justify-content-center mb-2 mb-md-0 ">
          <form class="d-flex w-100 search-box" style="max-width: 300px;" method="GET" action="/listings/search/city">
            <input class="form-control rounded-pill shadow-sm px-4 search" name="city" type="search" placeholder="Search destinations" aria-label="Search">
            <button class="btn rounded-pill ms-2 px-3 shadow-sm search-btn" style="background-color: #ff385c; color: white;">
              <i class="fas fa-search"></i>
            </button>
          </form>
        </div>
        <div class="navbar-nav ms-md-3">
         <a class="nav-item nav-link" href="/listings"><b>Explore</b></a>
         <a class="nav-item nav-link" href="/listings/new">Add Listing</a>
        </div>

        <!-- Right-side links -->
        <div class="navbar-nav ms-md-3">
          <% if(currentUser){ %>
            <a class="nav-item nav-link" href="/logout"><b>Logout</b></a>
          <% } else { %>
            <a class="nav-item nav-link" href="/login"><b>Login</b></a>
            <a class="nav-item nav-link" href="/signup"><b>Register</b></a>
          <% } %>
        </div>

      </div>
    </div>
  </div>
</nav>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
