<% layout("layouts/boilerplate") %>

  <body class="bg-light">

    <div class="container my-5">
      <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8"> <!-- Increased width -->
          <div class="card shadow-sm">
            <div class="card-body p-4">
              <h2 class="card-title mb-4 text-center" style="color: #fb717a">Create a New Listing</h2>

              <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                  <label class="form-label" required>Title</label>
                  <input type="text" name="title" class="form-control " placeholder="Enter title" required>
                  <div class="valid-feedback">Title looks good</div>
                  <div class="invalid-feedback">Please enter a Title name </div>
                </div>

                <div class="mb-3">
                  <label class="form-label" required>Description</label>
                  <textarea name="description" class="form-control" rows="4" placeholder="Enter description"
                    required></textarea>
                  <div class="invalid-feedback">Please provide a description</div>
                </div>

                <!-- <div class="mb-3">
                <label class="form-label">Image URL</label>
               <input type="text" name="image.url" class="form-control" placeholder="https://example.com/image.jpg">

              </div> -->

                <div class="mb-3">
                  <label class="form-label">Upload image</label>
                  <input type="file" name="image.url" class="form-control">

                </div>


                <div class="mb-3">
                  <label class="form-label">Category!</label>
                  <div class="d-flex flex-wrap gap-2">
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="categories" value="Trending"
                        id="catTrending">
                      <label class="form-check-label" for="catTrending">Trending</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="categories" value="Farms" id="catFarms">
                      <label class="form-check-label" for="catFarms">Farms</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="categories" value="Rooms" id="catRooms">
                      <label class="form-check-label" for="catRooms">Rooms</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="categories" value="Mountains"
                        id="catMountains">
                      <label class="form-check-label" for="catMountains">Mountains</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="categories" value="Cities" id="catCities">
                      <label class="form-check-label" for="catCities">Cities</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="categories" value="Beach" id="catBeach">
                      <label class="form-check-label" for="catBeach">Beach</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="categories" value="Cabins" id="catCabins">
                      <label class="form-check-label" for="catCabins">Cabins</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="categories" value="Lakeside"
                        id="catLakeside">
                      <label class="form-check-label" for="catLakeside">Lakeside</label>
                    </div>
                  </div>
                 
                </div>

                <!-- Price and Location on the same row -->
                <div class="row mb-3">
                  <div class="col-md-4">
                    <label class="form-label">Price (â‚¹)</label>
                    <input type="text" name="price" class="form-control" placeholder="Enter price" required>
                    <div class="invalid-feedback">Please enter a price</div>
                  </div>
                  <div class="col-md-8">
                    <label class="form-label" required>Location</label>
                    <input type="text" name="location" class="form-control" placeholder="City or area" required>

                    <div class="invalid-feedback">Please enter a valid location</div>
                  </div>
                </div>

                <div class="mb-3">
                  <label class="form-label">Country</label>
                  <input type="text" name="country" class="form-control" placeholder="Country" required>
                  <div class="invalid-feedback">Please enter a country name</div>
                </div>

                <button type="submit" class="btn btn-primary w-100">Create Listing</button>
              </form>

              <div class="text-center mt-3 back">
                <a href="/listings" class="text-decoration-none back">&larr; Back to Listings</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>