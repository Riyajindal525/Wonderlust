<% layout("layouts/boilerplate") %>
<div style="max-width:600px; margin:80px auto; padding:30px; background:#fff3f3; border-radius:12px; box-shadow:0 4px 10px rgba(0,0,0,0.1); text-align:center; font-family:Arial, sans-serif;">
  <h1 style="color:#fb717a; font-size:2.5rem; margin-bottom:20px;">
    Error <%= err.statusCode || 500 %>
  </h1>
  
  <p style="font-size:1.1rem; color:#333; margin-bottom:25px;">
    <strong>Message:</strong> <%= err.message || "Something went wrong!" %>
  </p>

  <a href="/listings" style="display:inline-block; padding:10px 20px; background:#fb717a; color:white; text-decoration:none; border-radius:8px; font-weight:bold; transition:0.2s;">
    &larr; Back to Listings
  </a>
</div>
